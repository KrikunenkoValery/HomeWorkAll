#include <stdio.h>
#include <locale.h>
#include <string.h>
#include <math.h>
#include <time.h>

struct point {
		float x;
		float y;
		char name;
};
typedef struct point Point;
Point midpoint(Point o1, Point o2) {
	Point s;
	s.x = (o1.x + o2.x) / 2;
	s.y = (o1.y + o2.y) / 2; 
	return s;
}
float dist(Point z, Point w) {
	return sqrt(pow(fabs(w.x - z.x), 2) + pow(fabs(w.y - z.y), 2));
}
void put_point(Point z) {
		printf("point %c (%.1f, %.1f)\n", z.name, z.x, z.y);
}
int kakayaploskost(Point s) {
	if (s.x > 0 && s.y > 0) {
		return 1;
	}
	else if (s.x < 0 && s.y > 0) {
		return 2;
	}
	else if (s.x < 0 && s.y < 0) {
		return 3;
	}
	else if (s.x > 0 && s.y < 0) {
		return 4;
	}
	else {
		return 0;
	}
}
int main() {
	setlocale(LC_ALL, "RUS"); 

	Point b, a, z, w, o1, o2, s;
	a = (Point){ 1.f, 2.f, 'A' };
	b.name = 'B'; b.x = 5; b.y = -3;
	z.name = 'Z'; z.x = 4; z.y = 10;
	w.name = 'W'; w.x = 2; w.y = 4;
	printf("point %c (%.1f, %.1f)\n", b.name, b.x, b.y); 
	put_point(z);
	float distance = dist(z,w);
	printf("%f\n", distance);

	//Задание 1.4
	printf("Введите координаты первой точки (x y): ");
	scanf("%f %f", &o1.x, &o1.y);
	printf("Введите координаты второй точки (x y): ");
	scanf("%f %f", &o2.x, &o2.y);
	s = midpoint(o1, o2);
	printf("Середина отрезка между точками: (%.2f, %.2f)\n", s.x, s.y); 
	// 1.5
	int pl = kakayaploskost(s);
	printf("Точка находится в %d четверти\n", pl);
	
	//Задание 2
	struct tm* mytime;
	time_t t;
	t = time(NULL);
	mytime = localtime(&t); 
	printf("Московское время: %02d:%02d:%02d\n", mytime->tm_hour, mytime->tm_min, mytime->tm_sec);
	//Задание 2.2
    system("pause"); 
}
